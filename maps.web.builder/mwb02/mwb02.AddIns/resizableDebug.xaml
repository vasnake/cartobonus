<fw:FloatableWindow x:Class="mwb02.AddIns.resizableDebug"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:fw="clr-namespace:System.Windows.Controls;assembly=FloatableWindow"
    mc:Ignorable="d"
    d:DesignHeight="400" d:DesignWidth="300"
             HorizontalAlignment="Left" VerticalAlignment="Top"
             Width="400" Height="300" MinWidth="100" MinHeight="100"
             HorizontalContentAlignment="Left" VerticalContentAlignment="Top">
    
    <Grid x:Name="LayoutRoot" Background="White">
        
        <ScrollViewer HorizontalAlignment="Stretch" 
                      Name="scrollViewer1" VerticalAlignment="Stretch" >
            <TextBox HorizontalAlignment="Left" Name="textBlock1" 
                   Text="TextBlock" VerticalAlignment="Top" 
                   TextWrapping="Wrap" MinWidth="100" MinHeight="100" />
        </ScrollViewer>

    </Grid>

</fw:FloatableWindow>
