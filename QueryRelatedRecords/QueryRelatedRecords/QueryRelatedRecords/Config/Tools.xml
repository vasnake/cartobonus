<ToolPanels xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:extensibility="clr-namespace:ESRI.ArcGIS.Client.Extensibility;assembly=ESRI.ArcGIS.Client.Extensibility" 
            xmlns:esri="http://schemas.esri.com/arcgis/mapping/2009"
            xmlns:QueryRelatedRecords="clr-namespace:QueryRelatedRecords.AddIns;assembly=QueryRelatedRecords.AddIns">
  <ToolPanel ContainerName="MainToolbarContainer" Name="Main Toolbar">
    <Tools>
      <Tool Label="Choose Basemap" Icon="Images/toolbar/BaseMapGallery16.png" Description="Select a basemap for the map">
        <Tool.Class>
          <esri:BaseMapGallery />
        </Tool.Class>
        <Tool.ConfigData>
          <BaseMaps>
            <BaseMapInfo>
              <DisplayName>Streets</DisplayName>
              <Name>Streets</Name>
              <ThumbnailImage>Images/basemaps/agol_streets.png</ThumbnailImage>
              <BaseMapType>ArcGISServer</BaseMapType>
              <Url>http://services.arcgisonline.com/ArcGIS/rest/services/World_Street_Map/MapServer</Url>
            </BaseMapInfo>
            <BaseMapInfo>
              <DisplayName>Topographic</DisplayName>
              <Name>Topo</Name>
              <ThumbnailImage>Images/basemaps/agol_topo.png</ThumbnailImage>
              <BaseMapType>ArcGISServer</BaseMapType>
              <Url>http://services.arcgisonline.com/ArcGIS/rest/services/World_Topo_Map/MapServer</Url>
            </BaseMapInfo>
            <BaseMapInfo>
              <DisplayName>Imagery</DisplayName>
              <Name>Imagery</Name>
              <ThumbnailImage>Images/basemaps/agol_imagery.png</ThumbnailImage>
              <BaseMapType>ArcGISServer</BaseMapType>
              <Url>http://services.arcgisonline.com/ArcGIS/rest/services/World_Imagery/MapServer</Url>
            </BaseMapInfo>
            <BaseMapInfo>
              <DisplayName>USA Topo Maps</DisplayName>
              <Name>USA Topo Maps</Name>
              <ThumbnailImage>Images/basemaps/agol_usa.png</ThumbnailImage>
              <BaseMapType>ArcGISServer</BaseMapType>
              <Url>http://services.arcgisonline.com/ArcGIS/rest/services/USA_Topo_Maps/MapServer</Url>
            </BaseMapInfo>
            <BaseMapInfo>
              <DisplayName>Ocean</DisplayName>
              <Name>Ocean</Name>
              <ThumbnailImage>Images/basemaps/agol_ocean.png</ThumbnailImage>
              <BaseMapType>ArcGISServer</BaseMapType>
              <Url>http://services.arcgisonline.com/ArcGIS/rest/services/Ocean_Basemap/MapServer</Url>
            </BaseMapInfo>
            <BaseMapInfo>
              <DisplayName>Light Gray Canvas</DisplayName>
              <Name>Light Gray Canvas</Name>
              <ThumbnailImage>Images/basemaps/agol_gray_canvas.png</ThumbnailImage>
              <BaseMapType>ArcGISServer</BaseMapType>
              <Url>http://services.arcgisonline.com/ArcGIS/rest/services/Canvas/World_Light_Gray_Base/MapServer</Url>
            </BaseMapInfo>
            <BaseMapInfo>
              <DisplayName>Terrain</DisplayName>
              <Name>Terrain</Name>
              <ThumbnailImage>Images/basemaps/agol_terrain.png</ThumbnailImage>
              <BaseMapType>ArcGISServer</BaseMapType>
              <Url>http://services.arcgisonline.com/ArcGIS/rest/services/World_Terrain_Base/MapServer</Url>
            </BaseMapInfo>
            <BaseMapInfo>
              <DisplayName>Shaded Relief</DisplayName>
              <Name>Shaded Relief</Name>
              <ThumbnailImage>Images/basemaps/agol_world_relief.png</ThumbnailImage>
              <BaseMapType>ArcGISServer</BaseMapType>
              <Url>http://services.arcgisonline.com/ArcGIS/rest/services/World_Shaded_Relief/MapServer</Url>
            </BaseMapInfo>
            <BaseMapInfo>
              <DisplayName>OpenStreetMap</DisplayName>
              <Name>OpenStreetMap</Name>
              <ThumbnailImage>Images/basemaps/osm.png</ThumbnailImage>
              <BaseMapType>OpenStreetMap</BaseMapType>
              <Url>http://OpenStreetMap.org</Url>
            </BaseMapInfo>
            <BaseMapInfo>
              <DisplayName>Bing Maps Roads</DisplayName>
              <Name>Roads</Name>
              <ThumbnailImage>Images/basemaps/bingmaps_roads.png</ThumbnailImage>
              <BaseMapType>BingMaps</BaseMapType>
              <Url>http://dev.virtualearth.net/webservices/v1/imageryservice/imageryservice.svc</Url>
            </BaseMapInfo>
            <BaseMapInfo>
              <DisplayName>Bing Maps Aerial</DisplayName>
              <Name>Aerial</Name>
              <ThumbnailImage>Images/basemaps/bingmaps_aerial.png</ThumbnailImage>
              <BaseMapType>BingMaps</BaseMapType>
              <Url>http://dev.virtualearth.net/webservices/v1/imageryservice/imageryservice.svc</Url>
            </BaseMapInfo>
            <BaseMapInfo>
              <DisplayName>Bing Maps Hybrid</DisplayName>
              <Name>Hybrid</Name>
              <ThumbnailImage>Images/basemaps/bingmaps_hybrid.png</ThumbnailImage>
              <BaseMapType>BingMaps</BaseMapType>
              <Url>http://dev.virtualearth.net/webservices/v1/imageryservice/imageryservice.svc</Url>
            </BaseMapInfo>
          </BaseMaps>
        </Tool.ConfigData>
      </Tool>
      <Tool Label="Map Contents" Icon="Images/toolbar/ToggleMapContentsCommand16.png" Description="Toggle map contents">
        <Tool.Class>
          <esri:ToggleMapContentsCommand />
        </Tool.Class>
      </Tool>
      <Tool Label="Attribute Table" Icon="Images/toolbar/ToggleTableCommand16.png" Description="Show or hide the attributes table">
        <Tool.Class>
          <esri:ToggleTableCommand />
        </Tool.Class>
      </Tool>
      <Tool Label="Search" Icon="Images/toolbar/ToggleSearchCommand16.png" Description="Search for places or layers">
        <Tool.Class>
          <esri:ToggleSearchCommand />
        </Tool.Class>
      </Tool>
      <Tool Label="Select" Icon="Images/toolbar/SelectByDrawCommand16.png" Description="Select features by drawing a box on the map">
        <Tool.Class>
          <esri:SelectByDrawCommand />
        </Tool.Class>
      </Tool>
      <Tool Label="Clear Selection" Icon="Images/toolbar/ClearSelectionCommand16.png" Description="Clear the selected features from the currently selected layer">
        <Tool.Class>
          <esri:ClearSelectionCommand />
        </Tool.Class>
      </Tool>
      <Tool Label="Editing" Icon="Images/toolbar/ToggleEditCommand16.png" Description="Show or hide the editing tools">
        <Tool.Class>
          <esri:ToggleEditCommand />
        </Tool.Class>
      </Tool>
    </Tools>
  </ToolPanel>
  <ToolPanel ContainerName="LayerConfigurationToolbarContainer" Name="Layer Toolbar">
    <Tools>
      <Tool Label="Refresh" Icon="Images/toolbar/RefreshLayerCommand16.png" Description="Refresh the currently selected layer">
        <Tool.Class>
          <esri:RefreshLayerCommand />
        </Tool.Class>
      </Tool>
      <Tool Label="Go To" Icon="Images/toolbar/GoToLayerCommand16.png" Description="Zoom to the currently selected layer">
        <Tool.Class>
          <esri:GoToLayerCommand />
        </Tool.Class>
      </Tool>
      <Tool Label="Service Details" Icon="Images/toolbar/ServiceDetailsCommand16.png" Description="View information about the selected layer's data source">
        <Tool.Class>
          <esri:ServiceDetailsCommand />
        </Tool.Class>
      </Tool>
    </Tools>
  </ToolPanel>
  <ToolPanel ContainerName="LayerConfigurationContextMenuContainer" Name="Layer Context Menu" Orientation="Vertical">
    <Tools>
      <Tool Label="Refresh" Icon="Images/toolbar/RefreshLayerCommand16.png" Description="Refresh the currently selected layer">
        <Tool.Class>
          <esri:RefreshLayerCommand />
        </Tool.Class>
      </Tool>
      <Tool Label="Go To" Icon="Images/toolbar/GoToLayerCommand16.png" Description="Zoom to the currently selected layer">
        <Tool.Class>
          <esri:GoToLayerCommand />
        </Tool.Class>
      </Tool>
      <Tool Label="Service Details" Icon="Images/toolbar/ServiceDetailsCommand16.png" Description="View information about the selected layer's data source">
        <Tool.Class>
          <esri:ServiceDetailsCommand />
        </Tool.Class>
      </Tool>
    </Tools>
  </ToolPanel>
  <ToolPanel ContainerName="FeatureDataGridToolbarContainer" Name="Attribute Table Toolbar">
    <Tools>
      <Tool Label="Select All" Icon="Images/toolbar/SelectAllCommand16.png" Description="Select all the features in the currently selected layer">
        <Tool.Class>
          <esri:SelectAllCommand />
        </Tool.Class>
      </Tool>
      <Tool Label="Zoom to Selection" Icon="Images/toolbar/zoomToSelectionCommand16.png" Description="Zoom to the currently selected features">
        <Tool.Class>
          <esri:ZoomToSelectionCommand />
        </Tool.Class>
      </Tool>
      <Tool Label="Export Selection" Icon="Images/toolbar/ExportSelectionCommand16.png" Description="Export the attributes of selected features to a CSV file">
        <Tool.Class>
          <esri:ExportSelectionCommand />
        </Tool.Class>
      </Tool>
      <Tool Label="Clear Selection" Icon="Images/toolbar/ClearSelectionCommand16.png" Description="Clear the selected features from the currently selected layer">
        <Tool.Class>
          <esri:ClearSelectionCommand />
        </Tool.Class>
      </Tool>
      <Tool Label="Filter by Map Extent" Icon="Images/toolbar/ToggleFilterFeaturesByMapExtentCommand16.png" Description="Only show records for the features within the current map extent">
        <Tool.Class>
          <esri:ToggleFilterFeaturesByMapExtentCommand />
        </Tool.Class>
      </Tool>
    </Tools>
  </ToolPanel>
  <ToolPanel ContainerName="RecordFilterToolbarContainer" Name="Filter Records Toolbar">
    <Tools>
      <Tool Label="Show All" Icon="Images/toolbar/ToggleAttributeDisplayAllCommand16.png" Description="Show records for all features in the current layer">
        <Tool.Class>
          <esri:ToggleAttributeDisplayAllCommand />
        </Tool.Class>
      </Tool>
      <Tool Label="Show Selected" Icon="Images/toolbar/ToggleAttributeDisplaySelectedCommand16.png" Description="Show records for selected features in the current layer">
        <Tool.Class>
          <esri:ToggleAttributeDisplaySelectedCommand />
        </Tool.Class>
      </Tool>
      <Tool Label="Show Unselected" Icon="Images/toolbar/ToggleAttributeDisplayNotSelectedCommand16.png" Description="Show records for unselected features in the current layer">
        <Tool.Class>
          <esri:ToggleAttributeDisplayNotSelectedCommand />
        </Tool.Class>
      </Tool>
    </Tools>
  </ToolPanel>
  <ToolPanel ContainerName="PopupToolbarContainer" Name="Popup Toolbar">
    <Tools>
      <Tool Label="Delete Feature" Icon="Images/toolbar/DeleteGraphicCommand16.png" Description="Remove the feature from the layer">
        <Tool.Class>
          <esri:DeleteGraphicCommand />
        </Tool.Class>
      </Tool>
      <Tool Label="Edit Shape" Icon="Images/toolbar/EditShapeCommand16.png" Description="Modify the feature's geometry">
        <Tool.Class>
          <esri:EditShapeCommand />
        </Tool.Class>
      </Tool>
      <Tool Label="Edit Values" Icon="Images/toolbar/EditValuesCommand16.png" Description="Modify the feature's attribute values">
        <Tool.Class>
          <esri:EditValuesCommand />
        </Tool.Class>
      </Tool>
      <Tool Label="Add Attachment" Icon="Images/toolbar/AddAttachmentsCommand16.png" Description="Add an attachment to the feature">
        <Tool.Class>
          <esri:AddAttachmentsCommand />
        </Tool.Class>
      </Tool>
          <Tool  Label="Query Related Records" Icon="/ESRI.ArcGIS.Mapping.Controls;component/images/icon_tools16.png" Description="Query the related records of the feature">
        <Tool.Class>
          <QueryRelatedRecords:QueryRelatedTool />
        </Tool.Class>
      </Tool>
    </Tools>
  </ToolPanel>
</ToolPanels>